/** \file   conf.oil
 *  \brief  System Configuration.
 *
 *  This file contains the System Configuration for Erika Enterprise.
 *
 *  \author  Errico Guidieri, Claudio Scordino
 *  \date    2018
 */

CPU mySystem {

  OS myOs {
    EE_OPT = "OS_EE_VERBOSE";
    EE_OPT = "OS_EE_APPL_BUILD_DEBUG";
    EE_OPT = "OS_EE_BUILD_DEBUG";
    EE_OPT = "OSEE_ASSERT";

    EE_OPT = "EE_DEBUG";
    // EE_OPT = "EE_EXECUTE_FROM_RAM";
    // EE_OPT = "EE_ICACHE_ENABLED";
    // EE_OPT = "EE_DCACHE_ENABLED";
    // CFLAGS ="-O3";

    /* Configure Conservative FLASH Wait States */
    // CFLAGS = "-DMM_CONFIGURE_FLASH_WS"

    CPU_DATA = X86_64 {
      /* Choose the platform (i.e., JAILHOUSE or BARE) */
      PLATFORM = JAILHOUSE;
      MULTI_STACK = TRUE;
      COMPILER = GCC;
      IDLEHOOK = TRUE {
        HOOKNAME = "DemoHAL_IdleHook";
      };
    };

    BOARD_DATA = VBOX_3610;

    KERNEL_TYPE = OSEK {
      CLASS = ECC1;
    };
  };

  APPDATA full_benchmark {
    APP_SRC = "main.c";
    APP_SRC = "hal.c";
  };

    COUNTER SystemTimer {
    MINCYCLE = 1;
    MAXALLOWEDVALUE = 2147483647;
    TICKSPERBASE = 1;
    TYPE = HARDWARE {
      SYSTEM_TIMER = TRUE;
      PRIORITY     = 1;
      DEVICE       = "APIC_TIMER";
    };
    SECONDSPERTICK = 0.001;
  };


    TASK MainTask {
      PRIORITY = 0x01;
      ACTIVATION = 1;
      SCHEDULE = FULL;
      AUTOSTART = TRUE;
      //STACK = SHARED;
      STACK = PRIVATE {
      	SIZE = 1024;
      };
    };

    TASK Task1 {
      PRIORITY = 0x02;
      ACTIVATION = 1;
      SCHEDULE = FULL;
      AUTOSTART = FALSE;
      //STACK = SHARED;
      STACK = PRIVATE {
      	SIZE = 1024;
      };
    };

    TASK Task3 {
      PRIORITY = 0x03;
      ACTIVATION = 1;
      SCHEDULE = FULL;
      AUTOSTART = FALSE;
      //STACK = SHARED;
      STACK = PRIVATE {
      	SIZE = 1024;
      };
    };

    TASK Task4 {
      PRIORITY = 0x04;
      ACTIVATION = 1;
      SCHEDULE = FULL;
      AUTOSTART = FALSE;
      //STACK = SHARED;
      STACK = PRIVATE {
      	SIZE = 1024;
      };
    };

    ISR isrentry_isr2 {
      CATEGORY = 2;
      PRIORITY = 1;
      SOURCE = "0x21";
    };


    ISR isrentry_isr1 {
      CATEGORY = 1;
      PRIORITY = 4;
      SOURCE = "0x22";
    };

    ISR isrexit_isr1 {
      CATEGORY = 1;
      PRIORITY = 5;
      SOURCE = "0x23";
    };

    ISR istentry_isr2 {
      CATEGORY = 2;
      PRIORITY = 2;
      SOURCE = "0x24";
    };

    ISR istexit_isr2 {
      CATEGORY = 2;
      PRIORITY = 3;
      SOURCE = "0x25";
    };
};
