/** \file   conf.oil
 *  \brief  System Configuration.
 *
 *  This file contains the System Configuration for Erika Enterprise.
 *
 *  \author  Errico Guidieri
 *  \date    2017
 */

CPU mySystem {

  OS myOs {
    EE_OPT = "OSEE_DEBUG";
    EE_OPT = "OS_EE_APPL_BUILD_DEBUG";
    EE_OPT = "OS_EE_BUILD_DEBUG";

    CFLAGS = "-I ../../src";
    CFLAGS = "-I ../../cfg";

    CPU_DATA = RH850 {
      ID = 0;
      COMPILER = DIAB;
      MULTI_STACK = TRUE {
        IRQ_STACK = FALSE;
        SHARED_STACK = FALSE;
      };
      IDLEHOOK = TRUE {
        HOOKNAME = "R_PRJ_RunBckgrndHook";
      };
    };

    MCU_DATA = RH850_G4MH {
      DERIVATIVE = "r7f702z04";
      EIINT_CHANNELS = 512;
    };

    LIB = EMBARK_G4MH;

    USEEXTENSIONAPI = TRUE {
      SEMAPHORE = DEFAULT {
        NAME = "V";
        COUNT = 0;
      };
    };

    USEORTI = TRUE;

    KERNEL_TYPE = OSEK {
      CLASS = ECC1;
      RQ = MQ;
    };
  };

  APPDATA ErikaSingleCore {
    APP_SRC = "src/r_prj.c";
    APP_SRC = "cfg/r_boot_cfg.c";
    APP_SRC = "cfg/r_g4mh_cfg.c";
    APP_SRC = "src/r_main.c";
  };

  COUNTER SystemTimer1ms {
    CPU_ID = 0;
    MINCYCLE = 1;
    MAXALLOWEDVALUE = 2147483647;
    TICKSPERBASE = 1;
    SECONDSPERTICK = 0.001;
    TYPE = HARDWARE {
      PRIORITY = 1;
      DEVICE = "18";
      SYSTEM_TIMER = TRUE;
    };
  };

  TASK R_PRJ_Task5msFirst {
    CPU_ID = 0;
    PRIORITY = 1;
    SCHEDULE = FULL;
    AUTOSTART = FALSE;
    STACK = PRIVATE {
      SIZE = 1024;
    };
  };

  TASK R_PRJ_Task5msSecond {
    CPU_ID = 0;
    PRIORITY = 2;
    SCHEDULE = FULL;
    AUTOSTART = FALSE;
    STACK = PRIVATE {
      SIZE = 1024;
      EXTENDED = TRUE;
    };
  };

  TASK R_PRJ_Task5msThird {
    CPU_ID = 0;
    PRIORITY = 1;
    SCHEDULE = FULL;
    AUTOSTART = FALSE;
    STACK = SHARED;
  };

  TASK R_PRJ_Task5msFourth {
    CPU_ID = 0;
    PRIORITY = 1;
    SCHEDULE = FULL;
    AUTOSTART = FALSE;
    STACK = SHARED;
  };

  TASK R_PRJ_Task5msFifth {
    CPU_ID = 0;
    PRIORITY = 1;
    SCHEDULE = FULL;
    AUTOSTART = FALSE;
    STACK = SHARED;
  };

  ALARM AlarmTask5ms {
    ACTION = ACTIVATETASK {
      TASK = R_PRJ_Task5msFirst;
    };
    AUTOSTART = TRUE {
      ALARMTIME = 5;
      CYCLETIME = 1;
    };
    COUNTER = SystemTimer1ms;
  };

  ALARM AlarmFreeTask1 {
    ACTION = ALARMCALLBACK {
      ALARMCALLBACKNAME = "R_PRJ_FreeTask";
    };
    AUTOSTART = TRUE {
      ALARMTIME = 10;
      CYCLETIME = 10;
    };
    COUNTER = SystemTimer1ms;
  };

};
