/** \file   conf.oil
 *  \brief  System Configuration.
 *
 *  This file contains the System Configuration for Erika Enterprise.
 *
 *  \author  Francesco Bagagli
 *  \date    2017
 */

CPU mySystem {

  OS myOs {
    EE_OPT = "OS_EE_APPL_BUILD_DEBUG";
    EE_OPT = "OS_EE_BUILD_DEBUG";
    EE_OPT = "OSEE_DEBUG";
    // EE_OPT = "OS_EE_VERBOSE";
    EE_OPT = "OSEE_BYPASS_CLOCK_CONFIGURATION";

    CFLAGS  = "-I..";
    LDFLAGS = "-Wl,--gc-sections";

    USERESSCHEDULER = FALSE;

    CPU_DATA = TRICORE {
      MULTI_STACK = TRUE;
      COMPILER = GCC {
        MINIMAL_OPTS = TRUE;
      };
      /*
      COMPILER = GCC;
      */
      IDLEHOOK = TRUE {
        HOOKNAME = "idle_hook";
      };
      CPU_CLOCK = 80.0;
    };

    MCU_DATA = TC29X {
      DERIVATIVE = "tc297tf";
      REVISION = "B";
    };

    LIB = ISAR_MCAL {
      /* Used to select library version. */
      VERSION = "3.0.0";
      /* Create libisarmcal.a */
      STAND_ALONE = TRUE;
      /* Drivers Enabled. */
      MCU_DRIVER = TRUE;
      PORT_DRIVER = TRUE;
      GPT_DRIVER = TRUE;
      GTM_DRIVER = TRUE;
      DIO_DRIVER = TRUE;
      SPI_DRIVER = TRUE;
      /* Enable DET */
      USE_DET = TRUE;
    };

    KERNEL_TYPE = OSEK {
      CLASS = BCC1;
    };
  };

  APPDATA myApp {
    APP_SRC = "code.c";
  };

  COUNTER SystemTimer {
    MINCYCLE = 1;
    MAXALLOWEDVALUE = 65535;
    TICKSPERBASE = 1;
    TYPE = HARDWARE {
      SYSTEM_TIMER = TRUE;
      PRIORITY     = 1;
      DEVICE       = "STM_SR0";
    };
    SECONDSPERTICK = 0.001;
  };

  ALARM AlarmTask1 {
    COUNTER = SystemTimer;
    ACTION = ACTIVATETASK {
      TASK = Task1;
    };
    AUTOSTART = TRUE {
      ALARMTIME = 500;
      CYCLETIME = 500;
    };
  };

  TASK Task1 {
    PRIORITY = 1;
    SCHEDULE = FULL;
  };

};
